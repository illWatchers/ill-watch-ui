{
  "name": "ill-watch-ui",
  "version": "0.1.0",
  "repository": "https://github.com/illWatchers/ill-watch-ui.git",
  "author": "illWatchers",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "apollo-boost": "0.1.16",
    "d3": "5.7.0",
    "graphql": "14.0.2",
    "react": "16.5.2",
    "react-apollo": "2.2.4",
    "react-dom": "16.5.2",
    "react-scripts": "2.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
