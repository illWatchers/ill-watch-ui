  "eslintIgnore": ["**/node_modules/*", "src/serviceWorker.js", "build/*"],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "react-app",
      "@illwatchers"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, {"extensions": [".js"]}]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
